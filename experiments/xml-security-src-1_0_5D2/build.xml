    <property name="cvs.server"            value="cvs.apache.org" />
    <property name="cvs.user.anonymous"    value="anoncvs" />
    <property name="cvs.user.developer"    value="geuerp" />

    <property name="doc.xml"               value="${dir.doc}/xml" />
