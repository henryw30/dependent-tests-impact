    </patternset>

    <patternset id="dataFiles">
       <include name="data/**" />
       <exclude name="data/de/uni-siegen/**" />
       <exclude name="data/com/ibm/xss4j-20011029/**/*" />
    </patternset>

    <patternset id="srcFiles">
