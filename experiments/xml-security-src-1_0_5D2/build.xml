    <path id="classpath.libraries" description="3rd party libs">
      <pathelement path="${lib.xerces.1}" />
      <pathelement path="${lib.xerces.2}" />
      <pathelement path="${lib.xalan.1}" />
      <pathelement path="${lib.xalan.2}" />
      <pathelement path="${lib.log4j}" />
      <pathelement path="${lib.jce}" />
      <pathelement path="/home/user/dependent-tests-impact/experiments/impact-tools/randoop-all-3.0.8.jar" />
      <pathelement path="/home/user/dependent-tests-impact/experiments/impact-tools/sootclasses-2.5.0.jar" />
      <pathelement path="/home/user/dependent-tests-impact/experiments/impact-tools/org.hamcrest.core_1.3.0.v201303031735.jar" />
      <pathelement path="/home/user/dependent-tests-impact/experiments/impact-tools/junit.jar" />

      
